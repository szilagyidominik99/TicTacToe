<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game4x4"
    android:background="@drawable/christmas">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.636"
        app:srcCompat="@drawable/x80" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:srcCompat="@drawable/o80" />

    <TextView
        android:id="@+id/xTextView"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/oTextView"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/drawTextView"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/oTextView"
        app:layout_constraintStart_toEndOf="@+id/xTextView"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageButton
            android:id="@+id/btn_0_0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/btn_0_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/btn_0_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/btn_0_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="3"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/btn_1_0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/btn_1_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/btn_1_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/btn_1_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="3"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/btn_2_0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/btn_2_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/btn_2_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/btn_2_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="3"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/btn_3_0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageButton
            android:id="@+id/btn_3_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="1"
            app:layout_row="3" />

        <ImageButton
            android:id="@+id/btn_3_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="2"
            app:layout_row="3" />

        <ImageButton
            android:id="@+id/btn_3_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_column="3"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/againButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:onClick="clickedAgain"
        android:text="Again"
        android:textColor="#00FF00"
        android:textSize="20sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:onClick="clickedBack"
        android:text="Back"
        android:textColor="#101010"
        android:textSize="20sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:onClick="clickedExit"
        android:text="Exit"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>